/* My Mostly Used waybar config incase you wonder :) */
{
"include": [
  "$HOME/.config/waybar/modules.json",
  "$HOME/.config/waybar/modules_workspaces.json",
  "$HOME/.config/waybar/modules_custom.json",
  "$HOME/.config/waybar/modules_groups.json",
  ],
"layer": "bottom",
//"mode": "dock",
"exclusive": true,
"passthrough": false,
"position": "top",
"spacing": 3,
"fixed-center": true,
"ipc": true,
"margin-top": 5,
"margin-left": 8,
"margin-right": 8,

"modules-left": [
	//"idle_inhibitor",
	//"custom/separator#blank",
	"clock",
        "custom/separator#dot-blank",	
	"tray",
        "custom/separator#blank",	
        "hyprland/workspaces#alpha",
	],

"modules-center": [
        "hyprland/window",
	],

"modules-right": [
        //"mpris",
        //"custom/separator#dot-line",
        "group/notify",	
	"battery",
	"custom/separator#blank",  
	"group/audio",
	"custom/separator#blank",
	"custom/power",
	],
}

